@using SnowflakeProxy.Core.Services
@using SnowflakeProxy.Core.Models
@inject IReportService ReportService

<div class="chart-component">
    @if (IsLoading)
    {
        <div class="loading-indicator">
            @if (LoadingContent != null)
            {
                @LoadingContent
            }
            else
            {
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading chart...</span>
                </div>
                <p>Loading chart...</p>
            }
        </div>
    }
    else if (ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @if (ErrorContent != null)
            {
                @ErrorContent(ErrorMessage)
            }
            else
            {
                <h6>Error loading chart</h6>
                <p>@ErrorMessage</p>
                @if (ShowRetry)
                {
                    <button class="btn btn-outline-danger btn-sm" @onclick="LoadChartAsync">
                        Retry
                    </button>
                }
            }
        </div>
    }
    else if (QueryResult != null)
    {
        <div class="chart-content">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h4 class="chart-title">@Title</h4>
            }

            @RenderChart()

            @if (ShowMetadata)
            {
                <div class="mt-2">
                    <small class="text-muted">
                        Rows: @QueryResult.Data.Rows.Count
                        @if (QueryResult.FromCache)
                        {
                            <text> | From Cache</text>
                        }
                    </small>
                </div>
            }
        </div>
    }
</div>

@code {
    /// <summary>
    /// SQL query to execute
    /// </summary>
    [Parameter, EditorRequired]
    public string Query { get; set; } = string.Empty;

    /// <summary>
    /// Visualization configuration
    /// </summary>
    [Parameter]
    public VisualizationConfig? Config { get; set; }

    /// <summary>
    /// Renderer to use: "vega-lite" or "blazor-bootstrap" (default: "vega-lite")
    /// </summary>
    [Parameter]
    public string Renderer { get; set; } = "vega-lite";

    /// <summary>
    /// Query parameters (optional)
    /// </summary>
    [Parameter]
    public Dictionary<string, object>? Parameters { get; set; }

    /// <summary>
    /// Cache TTL (optional)
    /// </summary>
    [Parameter]
    public TimeSpan? CacheTtl { get; set; }

    /// <summary>
    /// Chart title (optional, overrides Config.Title)
    /// </summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary>
    /// Custom loading content
    /// </summary>
    [Parameter]
    public RenderFragment? LoadingContent { get; set; }

    /// <summary>
    /// Custom error content
    /// </summary>
    [Parameter]
    public RenderFragment<string>? ErrorContent { get; set; }

    /// <summary>
    /// Event fired when error occurs
    /// </summary>
    [Parameter]
    public EventCallback<string> OnError { get; set; }

    /// <summary>
    /// Event fired when loading starts
    /// </summary>
    [Parameter]
    public EventCallback OnLoading { get; set; }

    /// <summary>
    /// Event fired when chart is loaded
    /// </summary>
    [Parameter]
    public EventCallback<QueryResult> OnLoaded { get; set; }

    /// <summary>
    /// Show retry button on error
    /// </summary>
    [Parameter]
    public bool ShowRetry { get; set; } = true;

    /// <summary>
    /// Show metadata (row count, cache status)
    /// </summary>
    [Parameter]
    public bool ShowMetadata { get; set; } = false;

    private bool IsLoading { get; set; }
    private string? ErrorMessage { get; set; }
    private QueryResult? QueryResult { get; set; }
    private bool _initialized;

    protected override async Task OnInitializedAsync()
    {
        _initialized = true;
        await LoadChartAsync();
    }

    protected override bool ShouldRender()
    {
        // Prevent unnecessary re-renders during initialization
        return _initialized;
    }

    private async Task LoadChartAsync()
    {
        if (string.IsNullOrWhiteSpace(Query))
        {
            ErrorMessage = "Query parameter is required";
            return;
        }

        IsLoading = true;
        ErrorMessage = null;
        QueryResult = null;
        StateHasChanged();

        await OnLoading.InvokeAsync();

        try
        {
            QueryResult = await ReportService.ExecuteQueryAsync(Query, Parameters, CacheTtl);
            await OnLoaded.InvokeAsync(QueryResult);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
            await OnError.InvokeAsync(ErrorMessage);
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private RenderFragment RenderChart() => builder =>
    {
        var spec = Config?.Spec ?? new { };

        switch (Renderer.ToLowerInvariant())
        {
            case "vega-lite":
                builder.OpenComponent<VegaLiteChart>(0);
                builder.AddAttribute(1, "Data", QueryResult!.Data);
                builder.AddAttribute(2, "Spec", spec);
                builder.CloseComponent();
                break;

            case "chartjs":
                builder.OpenComponent<ChartJsChart>(0);
                builder.AddAttribute(1, "Data", QueryResult!.Data);
                builder.AddAttribute(2, "Spec", spec);
                builder.CloseComponent();
                break;

            case "blazor-bootstrap":
                builder.OpenComponent<BlazorBootstrapChart>(0);
                builder.AddAttribute(1, "Data", QueryResult!.Data);
                builder.AddAttribute(2, "Spec", spec);
                builder.CloseComponent();
                break;

            default:
                builder.AddContent(0, $"Unknown renderer: {Renderer}. Supported: vega-lite, chartjs, blazor-bootstrap");
                break;
        }
    };
}
