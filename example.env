# Snowflake Connection Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to source control

# Required: Snowflake account identifier
# Format: <account_locator>.<region> or <organization>-<account_name>
SNOWFLAKE_ACCOUNT=your-account

# Required: Snowflake username
SNOWFLAKE_USER=your-username

# Required: Path to your private key file for authentication
# Generate with: openssl genrsa 2048 | openssl pkcs8 -topk8 -inform PEM -out rsa_key.p8
SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/your/private_key.p8

# Required: Passphrase for your private key
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your-passphrase

# Optional: Snowflake warehouse (defaults to COMPUTE_WH)
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Optional: Snowflake database (defaults to SNOWFLAKE_SAMPLE_DATA)
SNOWFLAKE_DATABASE=SNOWFLAKE_SAMPLE_DATA

# Optional: Snowflake schema (defaults to PUBLIC)
SNOWFLAKE_SCHEMA=PUBLIC

# Optional: Snowflake role (defaults to ACCOUNTADMIN)
SNOWFLAKE_ROLE=ACCOUNTADMIN
